{% extends "navbar_page.njk" %}

{% block body %}
{{super()}}
<div class="container">
    <div class="jumbotron">
        <h3>账号基础信息</h3>
        <ul id="info_list">
        </ul>
    </div>
</div>
{% endblock %}

{% block script %}
{{ super() }}
<script>
    $.ajax({
        type: "get",
        url: "/api/account",
        success: function (data) {
            var list=$("#info_list");
            for(var item in data) { 
                list.append("<li>" + item +" : "+ data[item] + "</li>");
            }
        },
        error: function (data) {
            console.log("User have not login.");
        }
    });
</script>    
{% endblock %}